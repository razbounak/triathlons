{% extends 'layout.twig' %}

{% block head %} Contact | Triathlon de Chalain - {{ parent() }} {% endblock %}

{% block content %}

{% include 'header_content.twig' %}

    <div class="bloc-titre-contact">
        <div class="titre yellow">{% set contact = traduction.contact_us %} {% trans contact %}</div>
    </div>

    <div class="content contact">

        {% if session.errors %}
            <div class="alerte">
                {% for error in session.errors %}
                    <p>{{ error }}</p>
                {% endfor %}
            </div>
        {% elseif session.success %}
            <div class="succes">
                Votre message a bien été envoyé, vous recevrez une réponse rapidement.
            </div>
        {% endif %}

        <p>{% set texte_message = traduction.texte_message %}{% trans texte_message %}</p>

        <form action="validate.php" method="post" class="form">

            <div class="input-field">
                <p type="{% set nom = traduction.nom %}{% trans nom %} :">
                    <input type="text" name="name" id="name" class="form-control" required aria-required="true" placeholder="{% set placeholder_nom = traduction.placeholder_nom %}{% trans placeholder_nom %}..." value="{% if session.inputs %}{{ session.inputs.name }}{% endif %}"/>
                </p>
            </div>
            <div class="input-field">
                <p type="{% set email = traduction.email %}{% trans email %} :">
                    <input type="text" name="email" id="email" class="form-control" placeholder="{% set placeholder_email = traduction.placeholder_email %}{% trans placeholder_email %}..." required aria-required="true" value="{% if session.inputs %} {{ session.inputs.email }}{% endif %}"/>
                </p>
            </div>
            <div class="input-field">
                <p type="{% set message = traduction.message %}{% trans message %} :">
                    <textarea name="message" class="form-control" id="message" placeholder="{% set placeholder_message = traduction.placeholder_message %}{% trans placeholder_message %}..." required aria-required="true">{% if session.inputs %} {{ session.inputs.message }}{% endif %}</textarea>
                </p>
            </div>
            <div class="input-field">
                <p type="{% set securite = traduction.securite %}{% trans securite %} :">
                    <input type="text" name="code" id="code" class="form-control" placeholder="{% set placeholder_securite = traduction.placeholder_securite %}{% trans placeholder_securite %}" required aria-required="true" value="{% if session.inputs %} {{ session.inputs.code }}{% endif %}"/>
                </p>
            </div>
            <div class="submit">
                <button type="submit" id="button-blue">{%  set envoyer = traduction.envoyer %}{% trans envoyer %}</button>
                <div class="ease"></div>
            </div>
        </form>
        <hr>
        <div class="bloc-w50 zone-contact">
            <div class="bloc-w20 map"><i class="fa fa-map-marker" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80">
                <p>Triath'Lons</p>
                <p>15 Avenue du Stade</p>
                <p>39000 Lons-le-Saunier</p>
            </div>
        </div><!--
    --><div class="bloc-w50 zone-contact zone-contact_bis">
            <div class="bloc-w20"><i class="fa fa-phone" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="tel:+33682880041">+33 (0)6.82.87.00.41</a></p></div>
            <div class="bloc-w20"><i class="fa fa-envelope" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="mailto:contact@triathlons.fr">contact@triathlons.fr</a></p></div>
            <div class="bloc-w20"><i class="fa fa-facebook" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="https://www.facebook.com/groups/triathlons39/" target="_blank">{% set suivre = traduction.suivre %}{% trans suivre %}</a></p></div>
        </div>
    </div>
{% endblock %}