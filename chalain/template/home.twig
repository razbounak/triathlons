{% extends 'layout.twig' %}

{# ZONE HEAD #}
{% block head %} Triathlon de Chalain - Triath'Lons {% endblock %}

{# ZONE CONTENT #}
{% block content %}
<div class="index">
    <!-- BANNER -->
    <section class="banner">
        <div class="header">
            <div class="logo"><a href="Accueil"><img src="theme/logo.png" alt="Accueil Triathlon"></a></div><!--
            --><div class="bloc-right">
                <div class="social">{% include 'lang.twig' %}
                    <a href="http://www.facebook.com/share.php?u=http://chalain.triathlons.fr"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                    <a href="http://twitter.com/share?url=http://chalain.triathlons.fr"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    <a href="https://plus.google.com/share?url=http://chalain.triathlons.fr"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </section>
    {% if compteur.online == 1 %}
        <!-- COMPTEUR -->
        <section id="compteur">
            <div class="compteur-titre bgblack aright">
                Triathlon du {{ compteur.temps | localizeddate("medium", "none", null, null, "d LLLL yyyy") }}
            </div><!--
            --><div class="compteur-time bgbleu">
                <div id="DateCountdown" data-date="{{ compteur.dateFr }} 09:00:00" style="width: 100%;"></div>
                <script>jQuery(document).ready(function($){ $("#DateCountdown").TimeCircles({
                "animation": "smooth", "use_background": false, "bg_width": 0, "fg_width": 0, "time": {
                    "Days": { "text": "Jours", "color": "#fac42b", "show": true },
                    "Hours": { "text": "Heures", "color": "#fac42b", "show": true },
                    "Minutes": { "text": "Minutes", "color": "#fac42b", "show": true },
                    "Seconds": { "text": "Secondes", "color": "#fac42b", "show": true }}});});</script>
            </div>
        </section>
    {% else %}
        <section id="compteur">
            <div class="compteur-titre bgblack aright">
                Triathlon de Chalain
            </div><!--
            --><div class="compteur-time bgbleu">
                <div class="compteur-info">à bientôt</div>
            </div>
        </section>
    {% endif %}
    {% include 'Home/welcome.twig' %}
    {% include 'Home/information.twig' %}
    {% include 'Home/actualite.twig' %}
    {% include 'Home/courses.twig' %}
    {% include 'Home/parcours.twig' %}
    {% include 'Home/programme.twig' %}
    {% include 'Home/reglement.twig' %}
    {% include 'Home/partenaire.twig' %}
    {% include 'Home/resultat.twig' %}
    <div class="bloc-titre-contact">
        <div class="titre yellow">{% set contact = traduction.contact_us %} {% trans contact %}</div>
    </div>
    <div class="content contact">
        <div class="bloc-w50 zone-contact">
            <div class="bloc-w20 map"><i class="fa fa-map-marker" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80">
                <p>Triath'Lons</p>
                <p>15 Avenue du Stade</p>
                <p>39000 Lons-le-Saunier</p>
            </div>
        </div><!--
    --><div class="bloc-w50 zone-contact">
            <div class="bloc-w20"><i class="fa fa-phone" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="tel:+33682870041">+33 (0)6.82.87.00.41</a></p></div>
            <div class="bloc-w20"><i class="fa fa-envelope" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="mailto:contact@triathlons.fr">contact@triathlons.fr</a></p></div>
            <div class="bloc-w20"><i class="fa fa-facebook" aria-hidden="true"></i></div><!--
        --><div class="bloc-w80"><p><a href="https://www.facebook.com/groups/triathlons39/" target="_blank">{% set suivre = traduction.suivre %}{% trans suivre %}</a></p></div>
        </div>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10952.600578753561!2d5.809006107616615!3d46.66329673390353!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478ce1e8d7ba4363%3A0xcd9aab6d0177c64c!2sDomaine+de+Chalain%2C+39130+Fontenu!5e0!3m2!1sfr!2sfr!4v1486051339271" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>
{% endblock %}